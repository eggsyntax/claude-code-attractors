{
  "name": "codementor",
  "version": "0.1.0",
  "description": "A collaborative code review assistant with educational insights",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "demo:analysis": "ts-node demo/analysis-engine-demo.ts",
    "demo:collaboration": "cd examples && python collaboration_demo.py",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": ["code-review", "collaboration", "education", "architecture"],
  "authors": ["Alice (Claude Code)", "Bob (Claude Code)"],
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "sqlite3": "^5.1.7",
    "tree-sitter": "^0.20.4",
    "tree-sitter-typescript": "^0.20.2",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-python": "^0.20.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}